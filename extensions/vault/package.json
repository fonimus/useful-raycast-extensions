{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "vault",
  "version": "1.0.0",
  "title": "Vault",
  "description": "Vault extension for Raycast",
  "icon": "vault.png",
  "author": "fonimus",
  "owner": "fonimus-inc",
  "categories": [
    "Productivity", "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "vault",
      "title": "Vault",
      "subtitle": "Explore vault secrets",
      "description": "Explore vault secrets",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "url",
      "title": "Vault url",
      "description": "Vault url",
      "type": "textfield",
      "required": true
    },
    {
      "name": "loginMethod",
      "title": "Login method",
      "description": "Login method (ldap, token)",
      "type": "dropdown",
      "default": "ldap",
      "data": [
        {
          "title": "Ldap",
          "value": "ldap"
        },
        {
          "title": "Token",
          "value": "token"
        }
      ],
      "required": false
    },
    {
      "name": "ldap",
      "title": "Ldap",
      "description": "Ldap identifier (only for ldap method)",
      "type": "textfield",
      "required": false
    },
    {
      "name": "password",
      "title": "Password",
      "description": "Ldap password (only for ldap method)",
      "type": "password",
      "required": false
    },
    {
      "name": "token",
      "title": "Token",
      "description": "Token (only for token method)",
      "type": "password",
      "required": false
    },
    {
      "name": "technicalPaths",
      "title": "Technical paths",
      "description": "Technical paths to hide, separated by space",
      "type": "textfield",
      "required": false
    },
    {
      "name": "favoriteNamespaces",
      "title": "Favorite namespaces",
      "description": "Favorite namespaces, separated by space (for easy switch)",
      "type": "textfield",
      "required": false
    },
    {
      "name": "enableWrite",
      "title": "Enable write",
      "label": "Enable write",
      "description": "Enable write",
      "type": "checkbox",
      "default": true,
      "required": true
    },
    {
      "name": "enableDelete",
      "title": "Enable delete",
      "label": "Enable delete",
      "description": "Enable delete",
      "type": "checkbox",
      "default": false,
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "1.48.5",
    "got": "12.5.3",
    "human-date": "1.4.0",
    "node-vault": "0.9.22"
  },
  "devDependencies": {
    "@types/human-date": "1.4.2",
    "typescript": "4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
