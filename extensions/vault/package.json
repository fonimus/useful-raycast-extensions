{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "vault",
  "version": "1.0.0",
  "title": "Vault",
  "description": "Vault extension for Raycast",
  "icon": "vault.png",
  "author": "fonimus",
  "owner": "fonimus-inc",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "vault",
      "title": "Vault",
      "subtitle": "Explore vault secrets",
      "description": "Explore vault secrets",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "url",
      "title": "Vault url",
      "description": "Vault url",
      "type": "textfield",
      "required": true
    },
    {
      "name": "ldap",
      "title": "Ldap",
      "description": "Ldap identifier",
      "type": "textfield",
      "required": true
    },
    {
      "name": "password",
      "title": "Password",
      "description": "Ldap password",
      "type": "password",
      "required": true
    },
    {
      "name": "technicalPaths",
      "title": "Technical paths",
      "description": "Technical paths to hide, separated by space",
      "type": "textfield",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "1.48.4",
    "got": "12.5.3",
    "human-date": "1.4.0",
    "node-vault": "0.9.22"
  },
  "devDependencies": {
    "@types/human-date": "1.4.2",
    "typescript": "4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
