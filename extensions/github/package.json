{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "github",
  "version": "1.0.0",
  "title": "Github",
  "description": "Github extension for Raycast",
  "icon": "github.png",
  "author": "fonimus",
  "owner": "fonimus-inc",
  "categories": [
    "Productivity", "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "pull",
      "title": "Pull",
      "subtitle": "Github - pull requests",
      "description": "Overview of github pull requests",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "token",
      "title": "Github token",
      "description": "Github personal generated token",
      "type": "password",
      "required": true
    },
    {
      "name": "repositories",
      "title": "Github repositories",
      "description": "Github repositories separated by space (format: owner/name)",
      "type": "textfield",
      "required": true
    }
  ],
  "dependencies": {
    "@raycast/api": "1.48.5",
    "human-date": "1.4.0",
    "octokit": "2.0.14"
  },
  "devDependencies": {
    "@octokit/types": "^9.0.0",
    "@types/human-date": "1.4.2",
    "typescript": "4.9.5"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
